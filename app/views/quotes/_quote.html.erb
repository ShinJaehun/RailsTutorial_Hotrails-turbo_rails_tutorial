<div id="<%= dom_id quote %>" style="width: 50rem; display: flex; border: 2px solid; padding: 10px; margin: 10px;">
  <div>
    <p>
      <%= quote.name %>
    </p>
  </div>

  <div style="margin-left: auto;">
    <%= link_to "Show", quote, class: "btn btn-info" %>
    <%= link_to "Edit", edit_quote_path(quote), class: "btn btn-success" %>
    <%= link_to "Destroy", quote, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
